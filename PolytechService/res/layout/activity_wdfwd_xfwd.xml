<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PjghActivity" >

    <!-- pjgh xfwd title -->

    <include layout="@layout/include_title_nothing" />

    <!-- pjgh xfwd content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/bgdxq_bg"
        android:orientation="vertical" >

    </LinearLayout>

    <!-- pjgh xfwd botton -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/xfwd_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/xfwd_back_botton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/global_left_botton"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="返回" />

        <Button
            android:id="@+id/xfwd_xiangy_botton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/global_right_botton"
            android:gravity="center"
            android:text="响应" />
    </LinearLayout>

</LinearLayout>